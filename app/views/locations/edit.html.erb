<h1>edit <%= @location.name %> </h1>

<%= form_with(model: [@trip, @location], local: true) do |f| %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, required: true, placeholder: "#{@location.name}" %>
    </div>
    
    <div class="field">
      <%= f.label :kind %>
      <%= f.text_field :kind, required: true, placeholder: "#{@location.kind}" %>
    </div>

    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description, required: true, placeholder: "#{@location.description}" %>
    </div>

    <%= f.submit "Update location"%>
  <% end %>
