<h1>edit <%= @location.name %> </h1>

<%= form_with(model: [@trip, @location], local: true) do |f| %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, required: true, placeholder: "#{@location.name}" %>
    </div>
    
    <div class="field">
      <%= f.label :type %>
      <%= f.text_field :type, required: true, placeholder: "#{@location.type}" %>
    </div>

    <div class="field">
      <%= f.label :description %>
      <%= f.text_field :description, required: true, placeholder: "#{@location.description}" %>
    </div>

    <%= f.submit "Add location"%>
  <% end %>
