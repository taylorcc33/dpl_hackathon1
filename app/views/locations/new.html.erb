<h1> Add a location to <%= @trip.name %> trip </h1>

  <%= form_with(model: [@trip, @location], local: true) do |f| %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, required: true, placeholder: "What is the name of this location?" %>
    </div>
    
    <div class="field">
      <%= f.label :type %>
      <%= f.text_field :type, required: true, placeholder: "What type of location is it?" %>
    </div>

    <div class="field">
      <%= f.label :description %>
      <%= f.text_field :description, required: true, placeholder: "Great! Now tell us a little about this location" %>
    </div>

    <%= f.submit "Add location"%>
  <% end %>
